<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.joelapenna.foursquared"
  android:versionName="2009-07-19"
  android:versionCode="2009071900">

  <uses-permission
    android:name="android.permission.ACCESS_COARSE_LOCATION" />
  <uses-permission
    android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission
    android:name="android.permission.INTERNET" />
  <uses-permission
    android:name="android.permission.READ_PHONE_STATE" />

  <uses-sdk
    android:minSdkVersion="3" />

  <application
    android:name="Foursquared"
    android:icon="@drawable/icon"
    android:label="@string/app_name"
    android:theme="@style/FoursquareTheme">

    <uses-library
      android:name="com.google.android.maps" />

    <activity
      android:name=".MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <category
          android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".AddVenueActivity"
      android:label="@string/add_venue_activity_name">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>


    <activity
      android:name=".BrowsableActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action
          android:name="android.intent.action.VIEW" />
        <category
          android:name="android.intent.category.DEFAULT" />
        <category
          android:name="android.intent.category.BROWSABLE" />
        <data
          android:scheme="http"
          android:host="playfoursquare.com"
          android:pathPrefix="/venue/" />
        <data
          android:scheme="http"
          android:host="m.playfoursquare.com"
          android:pathPrefix="/venue/" />
        <data
          android:scheme="http"
          android:host="playfoursquare.com"
          android:pathPrefix="/login" />
        <data
          android:scheme="http"
          android:host="m.playfoursquare.com"
          android:pathPrefix="/login" />
        <data
          android:scheme="http"
          android:host="playfoursquare.com"
          android:pathPrefix="/checkins" />
        <data
          android:scheme="http"
          android:host="m.playfoursquare.com"
          android:pathPrefix="/checkins" />
      </intent-filter>
    </activity>


    <activity
      android:name=".CheckinsActivity"
      android:label="@string/checkins_activity_name"
      android:launchMode="singleTop">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>

    <activity
      android:name=".CheckinsMapActivity">
      <intent-filter>
        <category
          android:name="android.intent.category.TAB" />
      </intent-filter>
    </activity>


    <activity
      android:name=".LoginActivity">
    </activity>


    <activity
      android:name=".PreferenceActivity"
      android:label="@string/preference_activity_name">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <category
          android:name="android.intent.category.PREFERENCE" />
      </intent-filter>
    </activity>


    <activity
      android:name=".SearchVenuesActivity"
      android:label="@string/venue_search_activity_name"
      android:launchMode="singleTop">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <action
          android:name="android.intent.action.SEARCH" />
      </intent-filter>
      <meta-data
        android:name="android.app.default_searchable"
        android:value=".SearchVenueActivity" />
      <meta-data
        android:name="android.app.searchable"
        android:resource="@xml/searchable" />
    </activity>

    <activity
      android:name=".SearchVenuesMapActivity">
      <intent-filter>
        <category
          android:name="android.intent.category.TAB" />
      </intent-filter>
    </activity>


    <activity
      android:name=".StatsActivity">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>


    <activity
      android:name=".TipsActivity"
      android:label="@string/tips_activity_name"
      android:launchMode="singleTop">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>

    <activity
      android:name=".TipsMapActivity">
    </activity>


    <activity
      android:name=".UserActivity"
      android:theme="@android:style/Theme.Dialog">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>


    <activity
      android:name=".VenueActivity">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
      </intent-filter>
    </activity>

    <activity
      android:name=".VenueCheckinActivity">
      <intent-filter>
        <category
          android:name="android.intent.category.TAB" />
      </intent-filter>
    </activity>

    <activity
      android:name=".VenueMapActivity">
      <intent-filter>
        <category
          android:name="android.intent.category.TAB" />
      </intent-filter>
    </activity>

    <activity
      android:name=".VenueTipsActivity">
      <intent-filter>
        <category
          android:name="android.intent.category.TAB" />
      </intent-filter>
    </activity>


    <provider
      android:name=".providers.VenueQuerySuggestionsProvider"
      android:authorities="com.joelapenna.foursquared.providers.VenueQuerySuggestionsProvider" />

  </application>
</manifest>
